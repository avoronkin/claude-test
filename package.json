{
  "name": "rock-paper-scissors-lib",
  "version": "1.0.0",
  "description": "A lightweight TypeScript library for Rock Paper Scissors game logic with stateless design",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/esm/index.js",
  "unpkg": "dist/esm/index.js",
  "jsdelivr": "dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "src/",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts"
  ],
  "sideEffects": false,
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run clean && npm run build:lib && npm run build:types",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=cobertura",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern 'src/**/demo/**'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern 'src/**/demo/**' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "ci": "npm run lint && npm run typecheck && npm run test:coverage && npm run build",
    "prepublishOnly": "npm run ci",
    "demo:dev": "vite --config vite.main.config.ts",
    "demo:dev:rps": "vite --config vite.rock-paper-scissors.config.ts",
    "demo:dev:ttt": "vite --config vite.tic-tac-toe.config.ts",
    "demo:dev:2048": "vite --config vite.2048.config.ts",
    "demo:build": "npm run build && vite build",
    "demo:build:rps": "vite build --config vite.rock-paper-scissors.config.ts",
    "demo:build:ttt": "vite build --config vite.tic-tac-toe.config.ts",
    "demo:build:2048": "vite build --config vite.2048.config.ts",
    "demo:build:all": "npm run build && npm run demo:build:rps && npm run demo:build:ttt && npm run demo:build:2048",
    "demo:preview": "vite preview",
    "demo:deploy": "npm run demo:build:all && npm run demo:copy-to-docs",
    "demo:copy-to-docs": "rm -rf docs/rock-paper-scissors docs/tic-tac-toe docs/2048 && mkdir -p docs/rock-paper-scissors docs/tic-tac-toe docs/2048 && cp -r dist/demo/rock-paper-scissors/* docs/rock-paper-scissors/ && cp -r dist/demo/tic-tac-toe/* docs/tic-tac-toe/ && cp -r dist/demo/2048/* docs/2048/"
  },
  "keywords": [
    "rock-paper-scissors",
    "typescript",
    "game",
    "stateless",
    "library",
    "rps"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/your-username/rock-paper-scissors-lib.git"
  },
  "bugs": {
    "url": "https://gitlab.com/your-username/rock-paper-scissors-lib/-/issues"
  },
  "homepage": "https://gitlab.com/your-username/rock-paper-scissors-lib#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "type": "commonjs",
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "rollup": "^4.46.2",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.6"
  }
}
